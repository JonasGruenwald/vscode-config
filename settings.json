{
  // This helps in gleam and elixir projects, so that wibble.gleam is shown next to the wibble/ folder
  "explorer.sortOrder": "mixed",
  "telemetry.telemetryLevel": "off",
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "editor.renderWhitespace": "all",
  "workbench.startupEditor": "none",
  "files.autoSave": "afterDelay",
  "window.newWindowDimensions": "inherit",
  "window.openFoldersInNewWindow": "on",
  "window.openFilesInNewWindow": "on",
  "workbench.activityBar.location": "top",
  "window.commandCenter": false,
  // less wasted vertical space by tabs
  "window.density.editorTabHeight": "compact",
  "editor.fontSize": 14,
  // The number of spaces a tab is equal to. This setting is overriden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.tabSize": 2,
  // Insert spaces when pressing Tab. This setting is overriden
  // based on the file contents when `editor.detectIndentation` is true.
  "editor.insertSpaces": true,
  "editor.indentSize": "tabSize",
  "emmet.triggerExpansionOnTab": true,
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "git.autofetch": true,
  "editor.fontFamily": "Jetbrains Mono NL, Menlo, Monaco, 'Courier New', monospace",
  "workbench.editorAssociations": {
    "*.svg": "default"
  },
  "vscode-color-picker.languages": [
    "python",
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "workbench.colorTheme": "Atom One Light",
  "workbench.colorCustomizations": {
    "[JetBrains New UI Dark Theme]": {
      "statusBarItem.remoteBackground": "#252526",
      "statusBarItem.remoteForeground": "#ffffff",
    },
    "[Atom One Light]": {
      "statusBarItem.remoteBackground": "#EAEAEB",
      "statusBarItem.remoteForeground": "#252526",
    },
    // I don't like that deleted lines are shown in red in the overview ruler
    // because it makes them look like errors, so I set them to magenta instead
    "editorOverviewRuler.deletedForeground": "#8e0082",
    // Errors should be as red as possible
    "editorOverviewRuler.errorForeground": "#ff0000",
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "timetracker.useCompactStatusPanel": true,
  "timetracker.dotTimeTrackerIndent": "",
  "timetracker.autostart.autoStartTimeTracking": true,
  "workbench.preferredDarkColorTheme": "JetBrains New UI Dark Theme",
  "workbench.preferredLightColorTheme": "Atom One Light",
  "window.autoDetectColorScheme": true,
  "svelte.enable-ts-plugin": true,
  "notebook.output.scrolling": true,
  "editor.linkedEditing": true,
  "javascript.preferences.renameMatchingJsxTags": true,
  "typescript.preferences.renameMatchingJsxTags": true,
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.indentSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "editor.detectIndentation": false,
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-auto",
  "database-client.telemetry.usesOnlineServices": false,
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "html": true,
    "typescript": true,
    "typescriptreact": true,
    "gleam": true,
    "elixir": true,
    "shellscript": true,
    "astro": true,
    "svelte": true,
    "dockerfile": true
  },
  "playwright.reuseBrowser": true,
  "window.confirmBeforeClose": "always",
  "[elixir]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.advanced": {
    "temperature": 0.5
  },
  "gleam.path": "/Users/jonas/.local/share/mise/installs/gleam/latest/bin/gleam",
  "githubIssues.userCompletions.enabled": false,
  "git.allowNoVerifyCommit": true,
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "terminal.external.osxExec": "ghostty",
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/opt/homebrew/bin/fish",
      "args": [
        "-l"
      ]
    },
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "mise.configureExtensionsAutomatically": false,
  "git.blame.editorDecoration.enabled": true,
  "files.associations": {
    ".env.development": "properties",
    ".env.production": "properties"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "mise.checkForNewMiseVersion": false,
  "svg.preview.mode": "svg",
  "git.replaceTagsWhenPull": true,
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.minimap.enabled": false
}